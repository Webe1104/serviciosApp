<p id="notice"><%= notice %></p>

<h1>Áreas</h1>

<p>Para subir un área selecciona un archivo .csv </p>
<div style="display: table-caption;">
  <%= form_tag import_areas_path, multipart: true do%>
    <%= file_field_tag :file%>
    <%= submit_tag "Cargar áreas"%>
  <% end %>
</div>


<table>
  <thead>
    <tr>
      <th>Servicio <%= link_to raw("<i class='material-icons left'>add</i>"), new_catalog_path %></th>
      <th>Área <%= link_to raw("<i class='material-icons left'>add</i>"), new_area_path %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.catalog.name %></td>
        <td><%= area.name %></td>
        <td>
          <div style="display: inline-flex;">
            <%= link_to area do %>
              <i class="material-icons left">clear_all</i>
            <% end %>
            <%= link_to edit_area_path(area) do %>
              <i class="material-icons left">edit</i>
            <% end %>
            <%= link_to area, method: :delete, data: { confirm: '¿Estás seguro de eliminar el elemento?' }  do %>
              <i class="material-icons left">delete</i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

