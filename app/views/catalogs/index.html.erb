<p id="notice"><%= notice %></p>

<h1>Servicios</h1>

<p>Para subir un servicio selecciona un archivo .csv </p>
<div style="display: table-caption;">
  <%= form_tag import_catalogs_path, multipart: true do%>
    <%= file_field_tag :file%>
    <%= submit_tag "Cargar servicios"%>
  <% end %>
</div>

<table class="highlight">
  <thead>
    <tr>
      <th>Servicios <%= link_to raw("<i class='material-icons left'>add</i>"), new_catalog_path %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catalogs.each do |catalog| %>
      <tr>
        <td><%= catalog.name %></td>
        <td>
          <div style="display: inline-flex;">
            <%= link_to catalog do %>
              <i class="material-icons left">clear_all</i>
            <% end %>
            <%= link_to edit_catalog_path(catalog) do %>
              <i class="material-icons left">edit</i>
            <% end %>
            <%= link_to catalog, method: :delete, data: { confirm: '¿Estás seguro de eliminar el elemento?' }  do %>
              <i class="material-icons left">delete</i>
            <% end %>
          </div>
        </td>
        <!-- <td><%= link_to 'Show', catalog %></td>
        <td><%= link_to 'Edit', edit_catalog_path(catalog) %></td>
        <td><%= link_to 'Destroy', catalog, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

